<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="EpubReader.Views.FolderDialogePage"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="CurrentPage"
    x:DataType="FolderDialogPageViewModel"
    BackgroundColor="{AppThemeBinding Dark={StaticResource AppBackgroundDarkColor},
                                      Light=White}"
    Unloaded="CurrentPage_Unloaded">
    <VerticalStackLayout Spacing="10" WidthRequest="225">
        <Label
            HorizontalOptions="Center"
            Text="{Binding Text}"
            VerticalOptions="Center" />
        <Button
            Command="{Binding Source={RelativeSource AncestorType={x:Type FolderDialogPageViewModel}}, Path=CancelCommand}"
            HorizontalOptions="Center"
            Text="Cancel"
            VerticalOptions="End" />
    </VerticalStackLayout>
</toolkit:Popup>
