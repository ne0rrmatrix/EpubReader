<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EpubReader.Views.LibraryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:EpubReader.Models;assembly=EpubReader"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:EpubReader.ViewModels;assembly=EpubReader"
    x:Name="CurrentPage"
    x:DataType="viewModels:LibraryViewModel"
    BackgroundColor="{AppThemeBinding Light={StaticResource Blue100Accent},
                                      Dark={StaticResource AppBackgroundDarkColor}}"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Blue200Accent},
                                            Dark={StaticResource AppBackgroundDarkColor}}">


    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:LibraryViewModel}}, Path=AddCommand}"
            IconImageSource="add_circle.png"
            Order="Primary" />
    </ContentPage.ToolbarItems>

    <CollectionView
        x:Name="collectionView"
        Grid.Row="1"
        Margin="{StaticResource CollectionMargin}"
        HorizontalScrollBarVisibility="Never"
        ItemsSource="{Binding Books}"
        SelectionMode="None"
        VerticalScrollBarVisibility="Never">

        <CollectionView.ItemsLayout>
            <GridItemsLayout
                HorizontalItemSpacing="8"
                Orientation="Vertical"
                Span="{StaticResource GridSpan}"
                VerticalItemSpacing="8" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="Models:Book">
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems>

                            <SwipeItem
                                BackgroundColor="LightGray"
                                Command="{Binding RemoveBookCommand, x:DataType=viewModels:LibraryViewModel, Source={RelativeSource AncestorType={x:Type viewModels:LibraryViewModel}}}"
                                CommandParameter="{Binding .}"
                                IconImageSource="delete.png"
                                Text="Delete" />

                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Border Style="{x:StaticResource EbookCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource EbookLabelText}"
                                Text="{Binding Title}" />

                            <Image
                                Grid.Row="1"
                                Margin="8,4,8,8"
                                Aspect="AspectFit"
                                HeightRequest="{StaticResource CardHeight}"
                                HorizontalOptions="Center"
                                Source="{Binding CoverImage, Mode=OneWay, Converter={StaticResource ByteArrayToImageSourceConverter}}">

                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem
                                            Command="{Binding RemoveBookCommand, x:DataType=viewModels:LibraryViewModel, Source={RelativeSource AncestorType={x:Type viewModels:LibraryViewModel}}}"
                                            CommandParameter="{Binding .}"
                                            IconImageSource="delete.png"
                                            Text="Delete" />
                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>

                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GotoBookPageCommand, x:DataType=viewModels:LibraryViewModel, Source={RelativeSource AncestorType={x:Type viewModels:LibraryViewModel}}}" CommandParameter="{Binding .}" />
                                </Image.GestureRecognizers>
                            </Image>

                        </Grid>
                    </Border>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>