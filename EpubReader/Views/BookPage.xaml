<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EpubReader.Views.BookPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EpubReader.Views"
    xmlns:shimmer="clr-namespace:Syncfusion.Maui.Toolkit.Shimmer;assembly=Syncfusion.Maui.Toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:EpubReader.ViewModels;assembly=EpubReader"
    xmlns:views="clr-namespace:EpubReader.Views"
    x:Name="CurrentPage"
    x:DataType="viewModels:BookViewModel"
    Loaded="CurrentPage_Loaded">

    <ContentPage.BindingContext>
        <viewModels:BookViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            BindingContext="{Binding Path=BindingContext, Source={x:Reference CurrentPage}, x:DataType=ContentPage}"
            Command="{Binding ShowPopupCommand}"
            IconImageSource="settings.png"
            Order="Primary" />
    </ContentPage.ToolbarItems>

    <shimmer:SfShimmer
        x:Name="Shimmer"
        AnimationDuration="3000">
        <shimmer:SfShimmer.Content>
            <Grid x:Name="Grid">
                <Grid.GestureRecognizers>
                    <OnPlatform x:TypeArguments="TapGestureRecognizer">
                        <On Platform="WinUI">
                            <TapGestureRecognizer
                                BindingContext="{Binding Path=BindingContext, Source={x:Reference CurrentPage}, x:DataType=ContentPage}"
                                Command="{Binding PressCommand}"
                                NumberOfTapsRequired="2" />
                        </On>
                    </OnPlatform>
                </Grid.GestureRecognizers>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <WebView
                    x:Name="EpubText"
                    Grid.Row="0"
                    Scale="1">
                    <WebView.GestureRecognizers>
                        <OnPlatform x:TypeArguments="SwipeGestureRecognizer">
                            <On Platform="Android">
                                <SwipeGestureRecognizer
                                    Direction="Left,Right,Up,Down"
                                    Swiped="SwipeGestureRecognizer_Swiped"/>
                            </On>
                            <On Platform="IOS">
                                <SwipeGestureRecognizer
                                    Direction="Left,Right,Up,Down"
                                    Swiped="SwipeGestureRecognizer_Swiped"/>
                            </On>
                        </OnPlatform>
                    </WebView.GestureRecognizers>
                </WebView>
                <StackLayout
                    x:Name="StackLayout"
                    Grid.Row="1"
                    Padding="10,10,10,10"
                    HorizontalOptions="Center"
                    IsVisible="{OnPlatform WinUI=true,
                                           Android={Binding IsNavMenuVisible}}"
                    Orientation="Horizontal"
                    Spacing="50">
                    <ImageButton
                        Background="Transparent"
                        Clicked="PreviousPage"
                        IsEnabled="{OnPlatform WinUI=true,
                                               Default=false}"
                        IsVisible="{OnPlatform WinUI=true,
                                               Default=false}"
                        Source="arrow_back.png"
                        WidthRequest="40" />
                    <Label
                        x:Name="PageLabel"
                        FontSize="20"
                        HorizontalOptions="Center" />
                    <ImageButton
                        Background="Transparent"
                        Clicked="NextPage"
                        IsEnabled="{OnPlatform WinUI=true,
                                               Default=false}"
                        IsVisible="{OnPlatform WinUI=true,
                                               Default=false}"
                        Source="arrow_forward.png"
                        WidthRequest="40" />
                </StackLayout>
            </Grid>
        </shimmer:SfShimmer.Content>
    </shimmer:SfShimmer>
</ContentPage>