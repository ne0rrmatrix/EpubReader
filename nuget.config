<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<packageSources>
		<!--To inherit the global NuGet package sources remove the <clear/> line below -->
		<clear />
		<add key="nuget" value="https://api.nuget.org/v3/index.json" />
		<add key="communityToolkitMaui" value="https://nuget.pkg.github.com/CommunityToolkit/index.json" />
	</packageSources>

	<!-- CI-friendly credentials: resolves %GITHUB_TOKEN% at runtime -->
	<packageSourceCredentials>
		<communityToolkitMaui>
			<add key="Username" value="github" />
			<add key="ClearTextPassword" value="%GITHUB_TOKEN%" />
		</communityToolkitMaui>
	</packageSourceCredentials>

	<!-- Allow reading credentials from environment when run locally or in CI -->
	<config>
		<add key="storePasswordInClearText" value="true" />
		<add key="interactive" value="false" />
	</config>
</configuration>
